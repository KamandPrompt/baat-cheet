<!DOCTYPE html>
<html>

<head>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="description" content="Baat Cheet is an anonymous chat app">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title><%= title %></title>
  <%- include('head_imports'); %>
</head>

<body>
  <%- include('user', {title: title}); %>

  <div class="wrapper">
    <div class="app-container">
      <div class="float-left position-absolute h-100 bg-white left">
        <div class="top position-relative w-100 p-4 my-4">
          <input type="text" placeholder="Search..." class="form-control px-3 float-left searchtext" />
          <a onclick="newRoom()" id="newRoom"><i class="fas fa-plus-circle"></i></a>
        </div>
        <ul class="people overflow-auto" name="people">
          <li class="person w-100 active position-relative" data-chat="lobby" id="lobby" onclick="showRoom(this)">
            <span class="name">Lobby</span><br>
            <span class="preview overflow-hidden d-inline-block">Central Lobby</span>
          </li>
        </ul>
        <button class="btn btn-primary sidebar-btn" onclick="SidebarToggle()">
          <i id="toggle-icon" class="fa fa-angle-right text-white"></i>
        </button>
      </div>
      <div class="right" id="lobby-msg" data-joined="1">

        <div class="top" data-chat="person1">
          <center id="online"><span>Lobby</span></center>
          <center><button class="btn" onclick="collap('lobby')"><span></span></button></center>
        </div>
        <div class="Participants">
          <center>
            <h2>Participants</h2>
          </center>
          <span></span>
        </div>
        <div class="chat" data-chat="person1">

        </div>
        <div class="write" id="write">
          <input type="text" id="textarea" class="textarea" data-active="lobby" />
          <div class="write-right">
            <!-- font-awesome smiley -->
            <a href="#" class="write-link smiley"><i class="far fa-smile"></i>
              <ul id="emobox" class="emobox">
              </ul>
            </a>
            <!-- font-awesome send -->
            <a href="javascript:;" class="write-link send"><i class="fas fa-paper-plane"></i></a>
          </div>
        </div>
      </div>
    </div>
    <div class="error"></div>


  </div>
  </div>

  <div id="room">
    <div>
      <input type="text" placeholder="Room Name" id="roomName" name="roomName"><br>
      <textarea placeholder="Description" id="description" name="description" rows="5" cols="30"></textarea>
      <button onclick="submitRoom()" id="submit">Submit</button>
      <button id="cancel">Cancel</button>
    </div>
    <span id='roomError'></span>
  </div>

</body>
<footer>
  <%- include('footer_imports'); %>
</footer>

</html>